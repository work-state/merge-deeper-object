{
  "version": "0.0.1",
  "author": "Ilyass Mabrouk",
  "license": "MIT",
  "name": "@work-state/merge-deeper-object",
  "description": "Deep merge properties of objects. Support both CJS and ESM.",
  "homepage": "https://github.com/work-state/merge-deeper-object",
  "repository": "work-state/merge-deeper-object",
  "types": "./lib/cjs/types/index.d.ts",
  "main": "./lib/cjs/index.js",
  "module": "./lib/esm/index.msj",
  "files": [
    "lib/**/*"
  ],
  "scripts": {
    "clean": "rm -rf ./lib",
    "build": "npm run clean && npm run build:esm && npm run build:cjs",
    "build:esm": "tsc -p ./config/tsconfig.esm.json && mv lib/esm/index.js lib/esm/index.mjs",
    "build:cjs": "tsc -p ./config/tsconfig.cjs.json",
    "prepack": "npm run build",
    "test": "mocha"
  },
  "keywords": [
    "object",
    "objects",
    "nested",
    "deep",
    "deeper",
    "merge",
    "combine",
    "clone deep",
    "keys",
    "key",
    "values",
    "value",
    "properties",
    "property",
    "entries",
    "entry"
  ],
  "verb": {
    "tasks": [
      "readme"
    ],
    "reflinks": [
      "verb"
    ],
    "lint": {
      "reflinks": true
    }
  },
  "exports": {
    ".": {
      "import": {
        "types": "./lib/esm/types/index.d.ts",
        "default": "./lib/esm/index.mjs"
      },
      "require": {
        "types": "./lib/cjs/types/index.d.ts",
        "default": "./lib/cjs/index.js"
      }
    }
  },
  "dependencies": {
    "typescript": "^4.9.5"
  },
  "devDependencies": {
    "@types/chai": "^4.3.4",
    "@types/mocha": "^10.0.1",
    "chai": "^4.3.7",
    "mocha": "^10.2.0",
    "ts-node": "^10.9.1"
  }
}
